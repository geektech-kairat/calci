<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/answerTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ответ!"
        app:layout_constraintEnd_toEndOf="@+id/numEt2"
        app:layout_constraintStart_toStartOf="@+id/numEt2"
        app:layout_constraintTop_toBottomOf="@+id/numEt2" />

    <EditText
        android:id="@+id/numEt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="enter number"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/numEt2"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:hint="enter number"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/numEt1"
        app:layout_constraintStart_toStartOf="@+id/numEt1"
        app:layout_constraintTop_toBottomOf="@+id/numEt1" />

    <ImageButton
        android:id="@+id/button"
        android:src="@drawable/ic_baseline_sync_alt_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/answerTv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>